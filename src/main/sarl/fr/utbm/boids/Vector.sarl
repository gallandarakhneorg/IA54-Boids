package fr.utbm.boids

import fr.utbm.boids.util.Coordinates

/* Du mal à réutiliser une classe Vector java, malgré l'import il veut pas reconnaitre le type de la variable, je passe par cette classe en attendant  */
class Vector {
	var x : double
	var y : double
	
	new (x : double, y : double){
		this.x = x
		this.y = y 
	}
	
	new (v : Vector){
		this.x = v.getX
		this.y = v.getY
	}
	
	new (){
		this.x = 0
		this.y = 0
	}
	
	new (coordinates : Coordinates){
		this.x = coordinates.x
		this.y = coordinates.y
	}
	
	def clear() : void{
		this.x = 0
		this.y = 0
	}
	
	def setX (x : double) : void{
		this.x = x
	}
	
	def setY (y : double) : void{
		this.y = y
	}
	
	def setXY(x : double, y :double) : void{
		this.x = x
		this.y = y
	}
	
	def setXY (vec : Vector) : void {
		x = vec.getX()
		y = vec.getY()
	}
	
	def getX () : double  {
		return x
	}
	
	def getY() : double{
		return y
	}
	
	def moins (vec : Vector){
		this.x = this.x - vec.x
		this.y = this.y - vec.y 
	}

	def plus(vec : Vector) {
		this.x = this.x + vec.x
		this.y = this.y + vec.y
	}

	def plus(coordinates : Coordinates) {
		this.x = this.x + coordinates.x
		this.y = this.y + coordinates.y
	}
	
	def plus(a : double, b : double){
		this.x = this.x + a
		this.y = this.y + b
	}

	def fois(a : double) {
		this.x = x * a
		this.y = y * a
	}
	
	def length () : double {
		return Math.sqrt (x*x + y*y)
	}
	
	def normaliser() : Vector {
		this.x = this.x / this.length
		this.y = this.y / this.length
		return this
	}
	
	def point (vec : Vector) : double{
		return (this.x*vec.x + this.y*vec.y)
	}
	
	def toString() : String{
		return "x : " + this.x + " ,y : " + this.y + "   "
	}
	
	
}
