
package fr.utbm.boids.util

import fr.utbm.boids.util.Vector

class Sphere {
	
	var center : Vector
	var radius : double
	
	new (c : Vector, r : double){
		this.center = c
		this.radius = r
	}
	
	/* 
	 * SETTER
	 */
	
	def setCenter(c : Vector){
		this.center = c
	}
	
	def setRadius (r : double){
		this.radius = r
	}
	
	/* 
	 * GETTER
	 */
	 
	def getCenter () : Vector {
		return this.center
	}
	
	def getRadius () : double {
		return this.radius 
	}
}
