import fr.utbm.boids.events.IsStarted
import io.sarl.core.Lifecycle
import fr.utbm.boids.events.EndSimulation
import fr.utbm.boids.events.AgentLeft

agent Scheduler {
	uses Logging, DefaultContextInteractions, Lifecycle
	
	/*
	var position : Vecteur
	var vitesse : Vecteur*/
	var groupe : int 
	
	
	/*
	 * gestion des évènements
	 */

	on Initialize {
		loggingName = "Scheduler"
		info("The Scheduler is started.")
		emit(new IsStarted())
	}

	on EndSimulation {
		killMe
	}

	on Destroy {
		emit(new AgentLeft)
	}
	
}
