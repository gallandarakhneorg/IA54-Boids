import java.util.Collection
import java.Math.*



class Vecteur{
	var x : double
	var y : double
	
	new (x : double, y : double){
		this.x = x
		this.y = y 
	}
	
	new (){
		this.x = 0
		this.y = 0
	}
	
	def setX (x : double) : void{
		this.x = x
	}
	
	def setY (y : double) : void{
		this.y = y
	}
	
	def setXY(x : double, y :double) : void{
		this.x = x
		this.y = y
	}
	
	def setXY (vec : Vecteur) : void {
		x = vec.getX()
		y = vec.getY()
	}
	
	def getX () : double  {
		return x
	}
	
	def getY() : double{
		return y
	}
	
	def moins (vec : Vecteur){
		this.x = this.x - vec.x
		this.y = this.y - vec.y 
	}

	def plus(vec : Vecteur) {
		this.x = this.x + vec.x
		this.y = this.y + vec.y
	}

	def fois(a : double) {
		this.x = x * a
		this.y = y * a
	}
	
	def length () : double {
		return Math.sqrt (x*x + y*y)
	}
	
	
}

agent Environment {
	uses Logging, DefaultContextInteractions
	
	on Initialize {
		info("The Environment agent was started.")
		emit(new IsStarted())
	}
	
	
